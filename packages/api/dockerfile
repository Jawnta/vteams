FROM node:16-alpine

WORKDIR /api

COPY package*.json ./
RUN npm install
RUN npm install --save-dev @types/express-session @types/dotenv
RUN npm install passport-google-oauth20
COPY . ./

ENTRYPOINT [ "npm" ]
